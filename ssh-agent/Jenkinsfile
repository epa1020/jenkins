pipeline {
    agent any
    stages {
        stage ("checkout") {
            steps{
                sh 'ls'    
                checkout scm
                sh 'ls'
            }
        }
        stage('build') {
            steps {
                sh 'ls'
            }
        }
        stage('starting') {
            environment { 
                DEBUG_TEXT = "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
            }
            steps {
                sh 'printenv'
            }
        }
    }
}
