pipeline {
    agent any
    stages {
        stage ("checkout") {
            steps{
                sh 'ls'    
                checkout scm
                sh 'ls'
            }
        }
        stage('build') {
            steps {
                sh 'ls'
            }
        }
        stage('starting') {
            environment { 
                DEBUG_TEXT = "v${env.BRANCH_NAME}.${env.BUILD_ID}"
            }
            steps {
                withCredentials([gitUsernamePassword(credentialsId: 'gitcreds', gitToolName: 'git-tool')]) {
                sh 'echo "----tag branch----"'
                sh 'git tag -a $DEBUG_TEXT -m "release version 0.1 beta"'
                sh 'git push origin $DEBUG_TEXT'
                }
                sh 'echo $DEBUG_TEXT'
                
            }
        }
    }
}
